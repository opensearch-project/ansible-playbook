{
  "policy": {
    "description": "delete after 30d workflow",
    "default_state": "hot",
    "schema_version": 1,
    "ism_template": {
      "index_patterns": [
        "ingress-nginx-*",
        "mywebapp-*"
      ],
      "priority": 100
    },
    "states": [
      {
        "name": "hot",
        "actions": [
          {
            "replica_count": {
              "number_of_replicas": 1
            }
          }
        ],
        "transitions": [
          {
            "state_name": "delete",
            "conditions": {
              "min_index_age": "30d"
            }
          }
        ]
      },
      {
        "name": "delete",
        "actions": [
          {
            "delete": {}
          }
        ]
      }
    ]
  }
}